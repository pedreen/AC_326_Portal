<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_user"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryLight"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/door_list_view"
        android:elevation="5dp"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:padding="5dp"
        android:elevation="6dp"
        android:id="@+id/user_username_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="30dp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:elevation="6dp"
        android:id="@+id/user_mac_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC Address"
        android:textSize="15dp"
        android:layout_below="@+id/user_username_text_view"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"/>

    <ListView
        android:id="@+id/door_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transcriptMode="alwaysScroll"
        android:dividerHeight="1dp"
        android:paddingBottom="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/user_mac_text_view"
        />
</RelativeLayout>
